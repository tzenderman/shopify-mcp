{
  "name": "@tzenderman/shopify-mcp",
  "version": "2.0.0",
  "description": "MCP Server for Shopify API, enabling interaction with store data through GraphQL API",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "dev": "node --loader ts-node/esm src/index.ts",
    "dev:http": "node --loader ts-node/esm src/http-server.ts",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "lint": "eslint 'src/**/*.ts'",
    "clean": "rimraf dist"
  },
  "keywords": [
    "shopify",
    "mcp",
    "model-context-protocol",
    "graphql",
    "ai",
    "llm",
    "claude"
  ],
  "author": {
    "name": "Tim Zenderman",
    "email": "tim@zenderman.com"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^5.0.1",
    "graphql": "^16.6.0",
    "graphql-request": "^5.1.0",
    "minimist": "^1.2.8",
    "rimraf": "^5.0.10",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.15.11",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "files": [
    "dist",
    "README.md",
    "REMOTE_SERVER.md",
    ".env.example",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tzenderman/shopify-mcp"
  },
  "bugs": {
    "url": "https://github.com/tzenderman/shopify-mcp/issues"
  },
  "homepage": "https://github.com/tzenderman/shopify-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
